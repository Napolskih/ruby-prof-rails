- optional ||= optional
.row
  .col-lg-8
    %label{for: id}
      = title
      = content_tag :span, '(optional)', {class: 'optional'} if optional
  .col-lg-4.text-right
    %a{href: 'javascript:void(0)', 'data-target' => "##{id}_help", 'data-toggle' => 'modal'} [Help]

.modal.fade{id: "#{id}_help", tabindex: -1, role: 'dialog', 'aria-labelledby' => 'myModalLabel', 'aria-hidden' => 'true'}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{'data-dismiss' => 'modal', type: 'button'}
          %span{'aria-hidden' => 'true'} Ã—
          %span.sr-only Close
        %h4.modal-title= title
      .modal-body
        = yield
      .modal-footer
        %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Close
